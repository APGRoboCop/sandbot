# the following specifies the path to your MOD...
MOD_DIR = D:\Half-Life\tfc

CPP = gcc

CPPFLAGS = -march=pentium -O2 -w -I../engine -I../common -I../pm_shared -I../metamod

OBJ = bot.o bot_client.o bot_combat.o bot_navigate.o bot_start.o \
	dll.o engine.o h_export.o linkfunc.o meta_api.o util.o waypoint.o

sandbot.dll:	${OBJ} sandbot.def
	dllwrap -s --def sandbot.def --driver-name gcc -o sandbot.dll \
		${OBJ}
	copy sandbot.dll ${MOD_DIR}\dlls\sandbot.dll /Y

sandbot.def:	${OBJ}
	dllwrap -s --output-def sandbot.def --driver-name gcc -o sandbot.dll \
		${OBJ}
	type GiveFnpt.dat >> sandbot.def

clean:
	-del *.o
	-del *_ming.def
	-del *.dll	

%.o:	%.cpp
	${CPP} ${CPPFLAGS} -c $< -o $@

%.o:	%.c
	${CPP} ${CPPFLAGS} -c $< -o $@

